{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp2.2/dotnetdebug.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {	
            "name": ".NET Core Remote Launch - Linux",
            "type": "coreclr",
            "request": "launch",
            "program": "~/target/dotnetdebug/dotnetdebug",
            //"args": [
            //    "./gpiotest"
            //],
            "cwd": "~/target/dotnetdebug",
            "stopAtEntry": true,
            "console": "internalConsole",
            "pipeTransport": {
            "pipeCwd": "${workspaceRoot}",
            "pipeProgram": "/usr/bin/ssh",
            "pipeArgs": [
                "-T", "pi@rpi3"
            ],
            "debuggerPath": "~/vsdbg/vsdbg"
            }   
        },
        {
            "name": ".NET Core Remote Launch - Windows",
            "type": "coreclr",
            "request": "launch",
            // "preLaunchTask": "build",
            "program": "/home/pi/target/dotnetdebug/dotnetdebug",
            // "args": ["/home/pi/target/helloworld.dll"],
            "cwd": "/home/pi/target/dotnetdebug",
            "stopAtEntry": true,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "c:\\program files\\putty\\PLINK.EXE",
                "pipeArgs": [
                    "-pw",
                    "raspberry",
                    "pi@172.31.7.17"
                ],
                "debuggerPath": "/home/pi/vsdbg/vsdbg"
            }
        },
        {
            "name": ".NET Remote Launch - Frmwrk-dep - Windows",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "RaspiDeploy_Win",
            "program": "~/.dotnet/dotnet",
            "args": ["/home/pi/target/dotnetdebug/dotnetdebug.dll"],
            "cwd": "~/target/dotnetdebug",
            "stopAtEntry": true,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "c:\\program files\\putty\\PLINK.EXE",
                "pipeArgs": [
                    "-pw",
                    "raspberry",
                    "pi@rpi3"
                ],
                "debuggerPath": "/home/pi/vsdbg/vsdbg"
            }
        },
        {	
            "name": ".NET Core Remote Launch - Frmwrk-dep - Linux",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "RaspiDeploy_Linux",
            "program": "~/.dotnet/dotnet",
            "args": [ "/home/pi/target/dotnetdebug/dotnetdebug.dll" ],
            "cwd": "~/target/dotnetdebug",
            "stopAtEntry": true,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceRoot}",
                "pipeProgram": "/usr/bin/ssh",
                "pipeArgs": [
                    "-T", "pi@rpi3"
                ],
                "debuggerPath": "~/vsdbg/vsdbg"
            }   
        }
    ]
}